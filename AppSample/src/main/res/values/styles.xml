<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/AppTheme_ColorPrimary</item>
        <item name="colorPrimaryDark">@color/AppTheme_ColorPrimaryDark</item>
        <item name="colorAccent">@color/AppTheme_ColorAccent</item>
        <item name="android:textColorPrimary">@color/AppTheme_ColorPrimaryText</item>
        <item name="android:textColorSecondary">@color/AppTheme_ColorSecondaryText</item>
        <item name="android:divider">@color/AppTheme_ColorDivider</item>
        <item name="android:navigationBarColor">@color/AppTheme_ColorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/AppTheme_ColorPrimary</item>
        <item name="colorPrimaryDark">@color/AppTheme_ColorPrimaryDark</item>
        <item name="colorAccent">@color/AppTheme_ColorAccent</item>
        <item name="android:textColorPrimary">@color/AppTheme_ColorPrimaryText</item>
        <item name="android:textColorSecondary">@color/AppTheme_ColorSecondaryText</item>
        <item name="android:divider">@color/AppTheme_ColorDivider</item>
        <item name="android:navigationBarColor">@color/AppTheme_ColorPrimaryDark</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
